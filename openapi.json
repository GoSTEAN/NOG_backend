{
  "openapi": "3.0.3",
  "info": {
    "title": "Abuja Night of Glory 2025 - VIP System API",
    "description": "Public VIP checker + Application Form + Admin Approval System",
    "version": "1.0.0",
    "contact": {
      "name": "Night of Glory Tech Team"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Backend API (Express)"
    },
    {
      "url": "http://localhost:3000",
      "description": "Frontend Dev Server (Vite/React)"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter JWT token from /api/admin/login"
      }
    },
    "schemas": {
      "VIP": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string", "example": "Matthew Ashimolowo" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "ApplicantRequest": {
        "type": "object",
        "required": ["firstName", "lastName", "email", "phone", "bio"],
        "properties": {
          "firstName": { "type": "string", "example": "Matthew", "minLength": 2 },
          "lastName": { "type": "string", "example": "Ashimolowo", "minLength": 2 },
          "email": { "type": "string", "format": "email", "example": "matthew@kicc.org.uk" },
          "phone": { "type": "string", "example": "08012345678" },
          "bio": {
            "type": "string",
            "minLength": 30,
            "example": "Senior Pastor of KICC London, GMN Leader for over 20 years. Requesting VIP access for Abuja Night of Glory 2025."
          }
        }
      },
      "Applicant": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" },
          "phone": { "type": "string" },
          "bio": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected"],
            "default": "pending"
          },
          "appliedAt": { "type": "string", "format": "date-time" }
        }
      },
      "AdminRegister": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string", "example": "GMN Admin" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password", "minLength": 6 }
        }
      },
      "AdminLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "admin": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          }
        }
      },
      "AddVIPRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "example": "David Ibiyeomie" }
        }
      }
    }
  },
  "paths": {
    "/api/vip/search": {
      "get": {
        "summary": "Search VIP by name (Public)",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "minLength": 2 },
            "example": "Matthew"
          }
        ],
        "responses": {
          "200": { "description": "VIP found or not found" }
        }
      }
    },

    "/api/applicant/apply": {
      "post": {
        "summary": "Apply to become a VIP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ApplicantRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "Application submitted successfully" },
          "400": { "description": "Invalid data or already applied" }
        }
      }
    },

    "/api/applicant/applications": {
      "get": {
        "summary": "Get all applications (Admin only)",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of all pending/processed applications",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Applicant" }
                }
              }
            }
          }
        }
      }
    },

    "/api/applicant/applications/{id}/approve": {
      "post": {
        "summary": "Approve application â†’ Add to VIP list as 'First Last'",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Approved & added to VIP list" },
          "400": { "description": "Already processed or already VIP" },
          "404": { "description": "Application not found" }
        }
      }
    },

    "/api/applicant/applications/{id}/reject": {
      "post": {
        "summary": "Reject application",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Application rejected" },
          "400": { "description": "Already processed" },
          "404": { "description": "Not found" }
        }
      }
    },

    "/api/admin/register": {
      "post": {
        "summary": "Register first admin (Run once)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminRegister" }
            }
          }
        },
        "responses": {
          "201": { "description": "Admin created" }
        }
      }
    },

    "/api/admin/login": {
      "post": {
        "summary": "Admin Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminLogin" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },

    "/api/admin/vips": {
      "get": {
        "summary": "Get all approved VIPs (manual + approved applicants)",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Complete VIP list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/VIP" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Manually add VIP",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AddVIPRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "VIP added" }
        }
      }
    },

    "/api/admin/vips/{id}": {
      "delete": {
        "summary": "Remove VIP",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "VIP removed" }
        }
      }
    }
  }
}